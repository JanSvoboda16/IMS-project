{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ sestavit aktivní soubor",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-O2",  
                "-o",                              
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lsimlib",
                "-lm",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Úloha vygenerovaná ladicím programem"
        }
    ],
    "version": "2.0.0"
}